@page "/login"
@inject IConfiguration Configuration
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        @{
            Navigation.NavigateTo("/");
        }
    </Authorized>
</AuthorizeView>

<MudPaper Elevation="0" Class="mt-4">
<MudGrid Justify="Justify.Center">
    <MudItem xs="12" md="6" lg="4">
            <MudText Class="my-3" Typo="Typo.h2" Align="Align.Center">@(Translations.Login_GreetingsTitle)</MudText>
        <MudButton Size="Size.Large" FullWidth="true" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Login" OnClick="Login">@Translations.Login_LoginBtn</MudButton>
    </MudItem>
</MudGrid>
</MudPaper>

@code {
    void Login()
    {
        Navigation.NavigateTo($"https://github.com/login/oauth/authorize?client_id={Configuration["Auth:ClientId"]}");
    }
}
