@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingValue Value="this">
    @Body
</CascadingValue>

@code {
    private bool _isDarkMode = false;
    public bool IsDarkMode
    {
        get => _isDarkMode;
        set
        {
            _isDarkMode = value;
            StateHasChanged();
        }
    }
}